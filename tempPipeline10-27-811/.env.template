# Environment Variables Template
# Copy to .env and fill in your values

# =============================================================================
# FDC Database Connection (Required)
# =============================================================================
NEON_CONNECTION_URL=postgresql://user:password@host:5432/database
# Example: postgresql://myuser:mypass@ep-cool-darkness-123456.us-east-2.aws.neon.tech/neondb

# =============================================================================
# OpenAI API (Required for Vision Model)
# =============================================================================
OPENAI_API_KEY=sk-proj-...
# Get from: https://platform.openai.com/api-keys

# =============================================================================
# Optional Debug/Tuning
# =============================================================================

# Alignment Engine Verbose Logging (0=off, 1=on)
ALIGN_VERBOSE=0

# Vision Model Selection
VISION_MODEL=gpt-4-vision-preview
# Options: gpt-4-vision-preview, gpt-4o, gpt-5

# =============================================================================
# Feature Flags (Override defaults from configs/feature_flags.yml)
# =============================================================================

# Prefer raw Foundation conversion over cooked exact match
# PREFER_RAW_FOUNDATION_CONVERT=true

# Enable Stage 5 proxy alignment
# ENABLE_PROXY_ALIGNMENT=true

# Enable Stage-Z energy-only last resort
# STAGEZ_BRANDED_FALLBACK=true

# =============================================================================
# Testing & Evaluation
# =============================================================================

# Test dataset path (for batch evaluation)
# TEST_DATASET_PATH=/path/to/food-nutrients/test

# Ground truth path (for accuracy evaluation)
# GROUND_TRUTH_PATH=/path/to/ground_truth.csv
